{
  "manifest_version": 2,

  "name": "AutoRefresh",
  "description": "Continuously refreshes the current tab.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/background.js"]
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage"
  ],
  "icons": { "16": "img/icon.png",
           "48": "img/icon.png",
          "128": "img/icon.png" }
}
